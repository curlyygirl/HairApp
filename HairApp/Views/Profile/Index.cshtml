@model HairApp.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Profile/_LayoutProfile.cshtml";
}
<div class="row justify-content-md-start">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Wellcome
            </div>
            <div class="card-body">
                @if (Session["FullName"] != null)
                {
                    <p>Name: @Session["FullName"].ToString()</p>
                    <p>Email: @Session["Email"].ToString()</p>
                }
            </div>
        </div>
    </div>
</div>

